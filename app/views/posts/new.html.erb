<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <div class="form-group d-flex">
          <%= f.submit "Save", class: 'btn btn-success w-50 mr-2' %>
          <%= link_to "Cancel", root_path, class: 'btn btn-danger w-50 ml-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
