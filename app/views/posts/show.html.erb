<div class="container">
  <div class="row">
    <div class="col-md-12 d-flex justify-content-between">
      <h4>
        <%= @post.title %>
      </h4>
      <div class="author">
        <strong>
          Author:
        </strong>
        <%= @post.user.email %>
      </div>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-md-12">
      <%= @post.body %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-12">
      <h5>Comments</h5>
    </div>
  </div>
</div>
